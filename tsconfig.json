{
    // https://www.typescriptlang.org/tsconfig#compilerOptions
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es2015", "dom", "es6" ],
        "sourceMap": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}
