{
    // https://www.typescriptlang.org/tsconfig#compilerOptions
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2020"],
        "module": "es2022",
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es2022",
        "types": ["node"],
    },
    "include": ["scripts/**/*"],
    "exclude": ["node_modules"]
}
